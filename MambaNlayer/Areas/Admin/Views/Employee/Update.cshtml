﻿@using Mamba.Core.Models;
@model Employee


<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="FullName" class="form-label">FullName</label>
            <input asp-for="FullName" class="form-control">
            <span asp-validation-for="FullName" style="color:red"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" style="color:red"></span>

        </div>
        <div class="mb-3">
            <label asp-for="ImgFile" class="form-label">Image</label>
            <input asp-for="ImgFile" class="form-control">
            <span asp-validation-for="ImgFile" style="color:red"></span>

        </div>
        <div asp-validation-summary="All" style="color:red"></div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>